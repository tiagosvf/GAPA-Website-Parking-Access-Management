                                    <li>
                                        <a href="Perfil_redirect.aspx">Perfil</a>
                                    </li>
                                    <li>
                                        <a href="logout.aspx">Logout</a>
                                    </li>
                                </ul>
                            </li>
                            <%}
                                else if (Session["tipo"] == null)
                                { %>
                            <li>
                                <a href="Login.aspx"><span class="glyphicon glyphicon-log-in"></span>&nbsp;Login</a>
