                                { %>
                            <li>
                                <a>Utilizadores</a>
                                <ul class="nav-dropdown">
                                    <li>
                                        <a href="Utilizadores_Add.aspx">Registar Utilizador</a>
                                    </li>
                                    <li>
                                        <a href="Utilizadores_G.aspx">Gerir Utilizadores</a>
                                    </li>
                                </ul>
                            </li>
                            <li>
                                <a>Portões</a>
                                <ul class="nav-dropdown">
                                    <li>
                                        <a href="Portoes_Add.aspx">Adicionar Portões</a>
                                    </li>
                                    <li>
                                        <a href="Portoes_G.aspx">Gerir Portões</a>
